<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/nav_devices">

    <fragment
        android:id="@+id/nav_devices"
        android:name="hu.bsstudio.raktrmobile.ui.devices.DevicesFragment"
        android:label="@string/menu_devices"
        tools:layout="@layout/fragment_devices">

        <action
            android:id="@+id/action_HomeFragment_to_HomeSecondFragment"
            app:destination="@id/nav_home_second" />
    </fragment>
    <fragment
        android:id="@+id/nav_home_second"
        android:name="hu.bsstudio.raktrmobile.ui.devices.HomeSecondFragment"
        android:label="@string/home_second"
        tools:layout="@layout/fragment_home_second">
        <action
            android:id="@+id/action_HomeSecondFragment_to_HomeFragment"
            app:destination="@id/nav_devices" />

        <argument
            android:name="myArg"
            app:argType="string" />
    </fragment>

    <fragment
        android:id="@+id/nav_composite"
        android:name="hu.bsstudio.raktrmobile.ui.compositeItems.CompositeItemFragment"
        android:label="@string/menu_composite"
        tools:layout="@layout/fragment_composites" />

    <fragment
        android:id="@+id/nav_rents"
        android:name="hu.bsstudio.raktrmobile.ui.rents.RentsFragment"
        android:label="@string/menu_rents"
        tools:layout="@layout/fragment_rents" />
</navigation>